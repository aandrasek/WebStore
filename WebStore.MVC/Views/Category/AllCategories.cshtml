@model IEnumerable<WebStore.MVC.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "AllCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/mainStyle.css" />

<h2 class="aligncenter">All Categories</h2>

<a class="orange" href="/Category/NewCategory">Add category</a>
<table class="tableCategory">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img class="indexImage" src="~/Images/@item.ImageURL" alt="@item.ImageURL" />
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateCategory", "Category", new { ID = item.ID }, new { @class="orange"}) |
                @Html.ActionLink("Delete", "DeleteCategory", "Category", new { ID = item.ID }, new { @class = "orange" })
            </td>
        </tr>
    }

</table>