@model IEnumerable<WebStore.MVC.ViewModels.ProductViewModel>
@{
    ViewBag.Title = "AllProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/mainStyle.css" />
<h2 class="aligncenter">All Products</h2>

<p>
    @Html.ActionLink("Add product", "NewProduct", "Product",null,new { @class="orange"})
</p>
<table class="tableProduct">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discounted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discounted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                <img class="indexImage" src="~/Images/@item.ImageURL" alt="@item.ImageURL" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateProduct", "Product", new { ID = item.ID }, new { @class="orange" }) |
                @Html.ActionLink("Delete", "DeleteProduct", "Product", new { ID = item.ID }, new { @class = "orange" })
            </td>
        </tr>
    }

</table>
